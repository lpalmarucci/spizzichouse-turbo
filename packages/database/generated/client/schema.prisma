generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id        String       @id @default(uuid()) @db.Uuid
  full_name String
  email     String
  bio       String?
  createdAt DateTime     @default(now())
  level     PlayerLevel
  status    PlayerStatus
  Match     Match[]?

  @@map("players")
}

model Match {
  id       String      @id @default(uuid())
  title    String
  status   MatchStatus
  players  Player[]
  date     DateTime    @default(now())
  duration Float?
}

enum MatchStatus {
  ACTIVE
  COMPLETED
}

enum PlayerLevel {
  BEGINNER
  INTERMEDIATE
  EXPERT
}

enum PlayerStatus {
  ACTIVE
  INACTIVE
}
