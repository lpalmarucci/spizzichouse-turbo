generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Player {
  id        String       @id @default(uuid()) @db.Uuid
  full_name String
  email     String
  bio       String?
  createdAt DateTime     @default(now())
  level     PlayerLevel  @default(BEGINNER)
  status    PlayerStatus @default(ACTIVE)
  matches   Match[]      @relation("MatchToPlayer")
  rounds    Round[]      @relation("RoundsToPlayer")

  @@map("players")
}

model Match {
  id          String      @id @default(uuid())
  title       String
  description String?
  status      MatchStatus
  date        DateTime    @default(now())
  duration    Float?
  roundId     String?
  Round       Round?      @relation(fields: [roundId], references: [id])
  players     Player[]    @relation("MatchToPlayer")

  @@map("matches")
}

model Round {
  id        String      @id @default(uuid())
  status    RoundStatus @default(IN_PROGRESS)
  createdAt DateTime    @default(now())
  matches   Match[]
  players   Player[]    @relation("RoundsToPlayer")

  @@map("rounds")
}

enum RoundStatus {
  IN_PROGRESS
  COMPLETED
}

enum MatchStatus {
  UPCOMING
  IN_PROGRESS
  COMPLETED
}

enum PlayerLevel {
  BEGINNER
  INTERMEDIATE
  EXPERT
}

enum PlayerStatus {
  ACTIVE
  INACTIVE
}
